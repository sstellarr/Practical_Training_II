    <resultMap id="CustomerResultMap=" type="pojo.Customer">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="age" property="age"/>
        <result column="tel" property="tel"/>
        <result column="idcardnumber" property="idCardNumber"/>
        <result column="filenumber" property="fileNumber"/>
        <result column="account" property="account"/>
        <result column="password" property="password"/>
        <result column="height" property="height"/>
        <result column="birthday" property="birthday"/>
    </resultMap>
    <insert id="add">
        insert into customer (
        name,
        gender,
        age,
        tel,
        idcardnumber,
        filenumber,
        account,
        password,
        height,
        birthday
        )
        values(#{name},#{gender},#{age},#{tel},#{idCardNumber},#{fileNumber},#{account},#{password},#{height},#{birthday});
    </insert>
    <update id="update">
        update customer
        set
            name=#{name},
            gender=#{gender},
            age=#{age},
            tel=#{tel},
            idcardnumber=#{idCardNumber},
            filenumber=#{fileNumber},
            account=#{account},
            password=#{password},
            height=#{height},
            birthday=#{birthday}
        where if=#{id};
    </update>

    <delete id="deleteById">
        delete from customer where id=#{id};
    </delete>
    <select id="selectById" resultType="pojo.Customer">
        select * from customer where id=#{id};
    </select>
    <select id="selectAll" resultType="pojo.Customer">
        select  * from customer;
    </select>


</mapper>